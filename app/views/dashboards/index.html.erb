<h3 class="center">Message Board</h3>

<table class="bordered highlight">
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td>
          <b><%= message.context %></b>
          <i><%= time_ago_in_words(message.created_at) %> ago</i>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
