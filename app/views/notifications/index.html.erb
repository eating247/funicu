<%= form_tag method: :post, class: "navbar-form navbar-left search-form" do %>
  <%= text_field_tag(
      :message,
      params[:message],
      placeholder: "Text here!",
      class: "form-control"
  ) %>
  <%= text_field_tag(
      :to,
      params[:to],
      placeholder: "Number here!",
      class: "form-control"
  ) %>
  <%= submit_tag "send" %>
<% end %>
